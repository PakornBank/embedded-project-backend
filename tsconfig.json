{
  "compilerOptions": {
    "target": "ES2020", // Output target JavaScript version
    "module": "CommonJS", // Module system to use
    "outDir": "./dist", // Directory for compiled files
    "rootDir": "./src", // Root directory of TypeScript files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow imports from CommonJS modules
    "skipLibCheck": true // Skip type-checking for dependencies
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude these folders
}
